<p id="notice"><%= notice %></p>
<div class= "d-flex flex-column align-items-center py-5">
<h1>Member Lounge</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">제목</th>
      <th>작성자</th>
      <th>댓글수</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @notices.each do |notice| %>
      <tr class="table-warning">
        <td><%= link_to notice.title, notice %></td>
        <td><%= notice.user.name %></td>
        <td><%= notice.comments.count %></td>
        <td><%= link_to '편집', edit_post_notice_path(notice.id) %></td>
        <td><%= link_to '삭제', notice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.user.name %></td>
        <td><%= post.comments.count %></td>
        <td><%= link_to '편집', edit_post_path(post) %></td>
        <td><%= link_to '삭제', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
<%= form_tag search_path, method: :get do %>
  <%= text_field_tag "search[q]" %>
  <%= select_tag("search[select]", options_for_select([["제목","title"],["작성자 이름","name"],["작성자 이메일","email"]],"title" )) %>
  <%= submit_tag "검색" %>
<% end %>
</div>

<p><%= link_to '글 쓰기', new_post_path, class: "btn btn-primary" %> 
<%= link_to '공지 쓰기', new_post_notice_path, class: "btn btn-secondary"%></p>
</div>

